{
  "name": "todo-app-v0.7",
  "version": "0.7.0",
  "description": "Todo App v0.7 with Real-time Features, Notifications, and Offline Support",
  "scripts": {
    "test": "node tests/run-all-tests.js",
    "test:websocket": "node tests/websocket/websocket-test.js",
    "test:notifications": "node tests/notifications/notification-test.js",
    "test:offline": "node tests/offline/offline-test.js",
    "test:quick": "./test-v0.7.sh",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "migrate": "cd backend && node ../database/migrate.js"
  },
  "keywords": [
    "todo",
    "real-time",
    "websocket",
    "notifications",
    "offline",
    "react",
    "nodejs"
  ],
  "author": "Todo App Team",
  "license": "MIT",
  "devDependencies": {
    "axios": "^1.12.2",
    "nodemailer": "^6.9.4",
    "socket.io-client": "^4.7.2"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "pg": "^8.16.3"
  }
}
