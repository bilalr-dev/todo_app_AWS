# Frontend Environment Configuration
# These URLs will be automatically configured by the setup script
# No hardcoded URLs - everything is dynamic!
REACT_APP_API_URL=http://localhost:5002/api
REACT_APP_SOCKET_URL=http://localhost:5002
REACT_APP_APP_NAME=Todo App
REACT_APP_VERSION=0.7.0

# WebSocket Configuration
REACT_APP_WEBSOCKET_URL=ws://localhost:5002
REACT_APP_WEBSOCKET_RECONNECT_ATTEMPTS=5
REACT_APP_WEBSOCKET_RECONNECT_DELAY=2000

# Feature Flags
REACT_APP_ENABLE_REAL_TIME=true
REACT_APP_ENABLE_FILE_UPLOAD=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_ANALYTICS=false

# External Services
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=

# Development
REACT_APP_DEBUG=false
REACT_APP_MOCK_API=false
