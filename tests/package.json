{
  "name": "todo-app-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for Todo App",
  "scripts": {
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:performance": "jest --testPathPattern=performance",
    "test:security": "jest --testPathPattern=security",
    "test:ui": "jest --testPathPattern=ui",
    "test:smoke": "jest --testPathPattern=smoke",
    "test:all": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:report": "jest --coverage --coverageReporters=html",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "supertest": "^6.3.3",
    "puppeteer": "^21.5.2",
    "playwright": "^1.40.0",
    "artillery": "^2.0.0",
    "@k6io/k6": "^0.47.0",
    "axe-core": "^4.8.2",
    "jest-axe": "^8.0.0",
    "msw": "^2.0.8",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/setup.js"],
    "testMatch": [
      "<rootDir>/**/*.test.js",
      "<rootDir>/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "../frontend/src/**/*.{js,jsx}",
      "../backend/src/**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageDirectory": "../testreports/coverage",
    "coverageReporters": ["html", "text", "lcov"],
    "testResultsProcessor": "<rootDir>/reporters/html-reporter.js",
    "reporters": [
      "default",
      ["<rootDir>/reporters/custom-reporter.js", {
        "outputPath": "../testreports"
      }]
    ],
    "globalSetup": "<rootDir>/setup/global-setup.js",
    "globalTeardown": "<rootDir>/setup/global-teardown.js",
    "testTimeout": 30000
  }
}
